<div class="product-image">
    
    <div class="image-wrapper">
        <img src="<%= image.url %>" alt="<%= image.url %>">
    </div>

    <div class="remove-mark">
        <label for="<%= image.image_id %>">Mark to remove</label>
        <input type="checkbox" id="<%= image.image_id %>" value="<%= image.image_id %>" name="imagesToRemove">
    </div>

    <div class="control">
        <input type="radio" id="<%= `${image.image_id}_radio` %>" value="<%= image.image_id %>" name="mainImage" <%=image.main ? "checked" : "" %>>
        <label for="<%= `${image.image_id}_radio` %>">main</label>
    </div>
</div>